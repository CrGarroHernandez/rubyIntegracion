<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>


<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="header">
            <h4 class="title">Platos</h4>
              <p class="category">Listado de Platos</p>
              <%= link_to 'Agregar Plato', new_plato_path, class: 'btn btn-fill pull-right', :style => "background-color :#EDE211; border-right:0; border-left:0; border-top:0; border-bottom:0" %>
          </div>
            <div class="content table-responsive table-full-width">
              <table class="table table-hover">
<thead>
    <tr>
      <th>Nombre</th>
      <th>Costo</th>
      <th>Disponible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platos.each do |plato| %>
      <tr>
        <td><%= plato.nombre %></td>
        <td><%= plato.costo %></td>
        <td><%= plato.disponible %></td>
        <td><%= link_to 'Ver', plato %></td>
        <td><%= link_to 'Editar', edit_plato_path(plato) %></td>
        <td><%= link_to 'Eliminar', plato, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar este dato?' } %></td>
      </tr>
    <% end %>
  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>





