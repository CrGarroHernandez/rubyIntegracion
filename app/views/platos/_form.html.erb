<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Plato</h4>
                    </div>
                    <div class="content">
                        <%= form_with(model: plato, local: true) do |form| %>
                            <% if plato.errors.any? %>
                                <div id="error_explanation">
                                    <h2><%= pluralize(plato.errors.count, "error") %> prohibited this plato from being saved:</h2>

                                    <ul>
                                        <% plato.errors.full_messages.each do |message| %>
                                            <li>
                                                <%= message %>
                                            </li>
                                            <% end %>
                                    </ul>
                                </div>
                                <% end %>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Nombre</label>
                                                    <%= form.text_field :nombre, class: "form-control", id: :plato_nombre %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Costo</label>
                                            <%= form.number_field :costo, class: "form-control", id: :plato_costo %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-1">
                                            <div class="form-group">
                                                <label>Disponible</label>
                                            <%= form.check_box :disponible, class: "form-control text-center", id: :plato_disponible %>
                                    </div>
                                        </div>
                                    </div>
                                    <%= form.submit value: 'Registrar', class: 'btn btn-info btn-fill pull-right' %>
                                    <div class="clearfix"></div>
                                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>