<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>


  <div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="header">
            <h4 class="title">Platos</h4>
              <p class="category">Vista de Plato</p>
          </div>
            <div class="content table-responsive table-full-width">
              <table class="table">
                <tr>
                  <th>Nombre</th>
                  <td><%= @plato.nombre %></td>
                </tr>
                <tr>
                  <th>Precio</th>
                  <td><%= @plato.costo %></td>
                </tr>
                <tr>
                  <th>Disponibilidad</th>
                  <td><%= @plato.disponible %></td>
                </tr>
              </table>
            </div>
            <div>
            <%= link_to 'Listado', platos_path, class: 'btn btn-warning btn-fill pull-right'  %>
            </div>
            <div style="margin-right: 100px">
            <%= link_to 'Editar', edit_plato_path(@plato), class: 'btn btn-primary btn-fill pull-right'  %>
			</div>
          </div>
        </div>
      </div>
    </div>
  </div>

