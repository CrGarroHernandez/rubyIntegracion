 <div class="alert" role="alert" style="background-color: #EDE211">
</div>
<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>
<div class="content">
  <div class="container" style="padding-top: 65px">
    <div class="row">
      <div class="col-6 col-md-4"></div>
      <div class="col-6 col-md-4">
        <div class="card text-center">
          <div class="card-header" style="padding-top: 30px">
            <h2>¿Olvidaste tu contraseña?</h2>
          <%= image_tag("logo_weno2.png", :alt => "rss feed") %>
          </div>
          <div class="card-body" style="padding-bottom: 50px; padding-top:20px">
          	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          	  <%= render "devise/shared/error_messages", resource: resource %>
          	  <div class="form-group">
          	  	<%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", :style => "margin-left:auto; width: 196px; margin-right:auto", autofocus: true, autocomplete: "email" %>
          	  </div>
          	   <div class="actions">
    <%= f.submit "Restablecer contraseña",:class=>'btn', :style => "background-color :#EDE211; border-right:0; border-left:0; border-top:0; border-bottom:0" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
          	</div>
      </div>
      </div>
      </div>
      </div>
      </div>
      </div>








