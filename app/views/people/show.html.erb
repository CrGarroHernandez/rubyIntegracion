<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>

  <div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="header">
            <h4 class="title">Cajeros</h4>
              <p class="category">Listado de Cajeros</p>
          </div>
            <div class="content table-responsive table-full-width">
              <table class="table">
                <tr>
                  <th>Rut</th>
                  <td><%= @person.rut %></td>
                </tr>
                <tr>
                  <th>Nombre</th>
                  <td><%= @person.nombre %></td>
                </tr>
                <tr>
                  <th>Apellido Paterno</th>
                  <td><%= @person.ap_paterno %></td>
                </tr>
                <tr>
                  <th>Apellido Materno</th>
                  <td><%= @person.ap_materno %></td>
                </tr>
                <tr>
                  <th>Fecha Nacimiento</th>
                  <td><%= @person.fecha %></td>
                </tr>
              </table>
            </div>
            <div>
            <%= link_to 'Listado', people_path, class: 'btn btn-warning btn-fill pull-right'  %>
            </div>
            <div style="margin-right: 100px">
            <%= link_to 'Editar', edit_person_path(@person), class: 'btn btn-primary btn-fill pull-right'  %>
      </div>
          </div>
        </div>
      </div>
    </div>
  </div>
