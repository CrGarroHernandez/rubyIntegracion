<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="header">
            <h4 class="title">Cajeros</h4>
              <p class="category">Listado de Cajeros</p>
              <%= link_to 'Agregar Cajero', new_person_path, class: 'btn btn-fill pull-right', :style => "background-color :#EDE211; border-right:0; border-left:0; border-top:0; border-bottom:0" %>
          </div>
            <div class="content table-responsive table-full-width">
              <table class="table table-hover">
                <thead>
                  <th>Rut</th>
                  <th>Nombre</th>
                  <th>Apellido Paterno</th>
                  <th>Apellido Materno</th>
                  <th>Fecha Nacimiento</th>
                </thead>
                <tbody>
                  <% @people.each do |person| %>
                    <tr>
                      <td><%= person.rut %></td>
                      <td><%= person.nombre %></td>
                      <td><%= person.ap_paterno %></td>
                      <td><%= person.ap_materno %></td>
                      <td><%= person.fecha %></td>
                      <td><%= link_to 'Ver', person %></td>
                      <td><%= link_to 'Editar', edit_person_path(person) %></td>
                      <td><%= link_to 'Eliminar', person, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>





